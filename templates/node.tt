[% USE CGI %]
[% INCLUDE header.tt %]

[% IF current %]
  [% IF is_indexable_node %]
    <h1>[% site_name %] - <a href="[%cgi_url %]?action=index;index_type=[% CGI.escape(index_type) %];index_value=[% CGI.escape(index_value) %]">[% node_name %]</a></h1>
  [% ELSE %]
    <h1>[% site_name %] - <a href="[%cgi_url %]?action=show_backlinks&id=[% CGI.escape(node_name) %]">[% node_name %]</a></h1>
  [% END %]
[% ELSE %]
  <h1>
    [% site_name %] - historical version [% version %] of [% node_name %]
  </h1>
[% END %]

[% INCLUDE display_metadata.tt %]

[% content %]

[% IF os_x AND os_y %]
  <hr>
  <form action="[% cgi_url %]">
    Find all things within
    <select name="distance_in_metres">
      <option value="200">200 metres</option>
      <option value="500">500 metres</option>
      <option value="1000">1 kilometre</option>
      <option value="2000">2 kilometres</option>
    </select>
    of here.
    <input type="hidden" name="id" value="[% node_name %]" />
    <input type="hidden" name="action" value="find_within_distance" />
    <input type="submit" name="Go" value="Go" class="form_button" />
  </form>
[% END %]

<br clear="all" />

[% INCLUDE display_categories.tt %]

<hr />

[% IF current %]
  Last edited [% last_modified %] (this is version [% version %])<br />
[% ELSE %]
  This is version [% version %] (as of [% last_modified %])<br />
  <a href="[% cgi_url %]?[% node_param %]">View current version</a><br />
[% END %]

[% IF version > 1 %]
  <a href="[% cgi_url %]?action=list_all_versions;id=[% node_param %]">List all
  versions</a><br />
[% END %]

<p>
  <form action="supersearch.cgi" method="get">
    <input type="text" size="50" name="search" />
    <input type="submit" name="Go" value="Search" class="form_button" />
  </form>
</p>

[% INCLUDE footer.tt %]
