[% INCLUDE header.tt %]
[% INCLUDE banner.tt %]
<div id="content">
[% INCLUDE navbar.tt %]
<h2>Site changes in the last [% days %] days</h2>
[% content %]
<table id="recentchanges" cellpadding="0" cellspacing="0" border="0" summary="Table containing the list of recent changes to this site">
[% FOREACH node = recent_changes %]
	<tr>
		<td class="recentchanges_meta"><em>[% node.last_modified %]
		[% IF node.edit_type %]
		([% node.edit_type %])
		[% END %]</em></td>
		<td class="recentchanges_user">[% IF node.username %]
			<a href="[% cgi_url %]?username=[% node.username %];action=userstats">[% node.username %]</a>
		[% END %]</td>
	</tr>
	<tr>
		<td class="recentchanges_node_name"><strong><a href="[% node.url %]">[% node.name %]</a></strong></td>
		<td class="recentchanges_comment">
		[% IF node.comment %]
			[% node.comment%]
		[% ELSE %]
			&nbsp;
		[% END %]</td>
	</tr>
[% END %]
</table>
[% INCLUDE footer.tt %]
